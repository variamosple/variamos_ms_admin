## Environment ##
NODE_ENV=development

## DB ##
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_DATABASE=
DB_PORT=5432
DB_SSL=false

## Server ##
PORT=4000
HOST=localhost


## Setup jet-logger ##
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE

## CORS ##
CORS_ALLOWED_ORIGINS_PATTERNS=http://localhost:3000

## Authentication ##
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
# expires in 20 minutes
COOKIE_EXP_IN_MS=1200000


VARIAMOS_PRIVATE_KEY_PATH=./jwtRS256.key
VARIAMOS_PUBLIC_KEY_PATH=./jwtRS256.key.pub
# expires in 15 minutes
VARIAMOS_JWT_EXP_IN_SECONDS=900

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback
LOGIN_REDIRECT_URI=http://localhost:3000/login
HOME_REDIRECT_URI=http://localhost:3000

